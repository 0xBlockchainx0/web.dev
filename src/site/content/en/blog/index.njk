---
layout: layout
title: Blog
permalink: /en{{ tag.href }}/{% if tag.index > 0 %}{{ tag.index + 1 }}/{% endif %}index.html
override:tags: []
description: Our latest news, updates, and stories for developers
date: 2018-11-05
renderData:
  title: "{{ tag.title or title }}"
  description: "{{ tag.description or description }}"
pagination:
  data: collections.blogPaginated
  size: 1
  alias: tag
---

{# *-landing-page classes are a holdover from devsite. #}
{# It would be great to remove them as part of the v1 migration. #}
<div class="blog-landing-page">
  {# Make sure Actions are first in the tab order. #}
  <web-actions actions="subscribe"></web-actions>

  <div class="w-layout-container w-pb--non">
    <header class="w-page-header">
      <h1 class="w-page-header__headline">{{ renderData.title }}</h1>
      <p class="w-page-header__copy">{{ renderData.description }}</p>
      <div class="w-chips">
      </div>
    </header>
  </div>

  <section class="w-grid">
    <div class="w-grid__columns w-grid__columns--three" role="list">
      {% for post in tag.posts %}
        {% PostCard {post: post} %}
      {% endfor %}
    </div>
  </section>

  <nav class="w-pagination">
    {# Show first page anchor only if not on the first page #}
    {% if tag.index != 0 %}
      <a class="w-pagination__link w-pagination__arrow w-pagination__arrow--first" aria-label="First Page" href="{{ tag.href }}"></a>
    {% endif %}

    {# Show previous page anchor only if not on the first two pages #}
    {% if tag.index > 1 %}
      <a class="w-pagination__link w-pagination__arrow w-pagination__arrow--previous" aria-label="Previous Page" href="{{ tag.href }}/{{ tag.index }}"></a>
    {% endif %}

    {%- for pageEntry in tag | paginate  %}
      {% if pageEntry.showEllipses %}
        <span class="w-pagination__spacer">â€¦</span>
      {% endif %}
      <a
        {% if tag.index == (pageEntry.index - 1) %}
          class="w-pagination__link w-pagination__link--active"
        {% else %}
          class="w-pagination__link"
        {% endif %}

        {% if tag.index == (pageEntry.index - 1) %}
          aria-current="page"
        {% endif %}

        aria-label="Page {{pageEntry.index}}"
        href="{{ pageEntry.href }}"
      >
        {{ pageEntry.index }}
      </a>
    {%- endfor %}

    {# Show next page anchor only if not on the last or penultimate pages #}
    {% if (tag.index + 2) < (tag.pages) %}
      <a class="w-pagination__link w-pagination__arrow w-pagination__arrow--next" aria-label="Next Page" href="{{ tag.href }}/{{ tag.index + 1 }}"></a>
    {% endif %}

    {# Show last page anchor only if not on the last page #}
    {% if tag.index != (tag.pages - 1) %}
      <a class="w-pagination__link w-pagination__arrow w-pagination__arrow--last" aria-label="Last Page" href="{{ tag.href }}/{{ tag.pages }}"></a>
    {% endif %}

  </nav>
</div>
